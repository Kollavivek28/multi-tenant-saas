NODE_ENV=development
PORT=5000

# Database (update DB_HOST/DB_PASSWORD for your environment)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_db
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/saas_db?schema=public

# JWT / Auth
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=24h

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000,http://frontend:3000

# Optional email provider settings
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=
